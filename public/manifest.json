{
  "manifest_version": 3,
  "name": "React Extension Demo",
  "version": "1.0.0",
  "description": "Demo Chrome extension with popup that opens React iframe overlay",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Demo Extension"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "iframe.html",
        "iframe.js",
        "iframe.css",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}